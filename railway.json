{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "cd RestApi && dotnet restore && dotnet publish -c Release -o out",
    "watchPatterns": ["RestApi/**"]
  },
  "deploy": {
    "startCommand": "cd RestApi/out && dotnet RestApi.dll",
    "runtime": "V2",
    "numReplicas": 1,
    "sleepApplication": false,
    "useLegacyStacker": false,
    "multiRegionConfig": {
      "us-west2": {
        "numReplicas": 1
      }
    },
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}